# Configuración Global de Backend (S3 + DynamoDB para bloqueo)
remote_state {
  backend = "s3"
  config = {
    bucket         = "enterprise-terraform-state"
    key            = "${path_relative_to_include()}/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-locks"
    acl            = "bucket-owner-full-control"
    sse_algorithm  = "aws:kms"  # Encriptación con AWS KMS
  }
}

# Bloqueo de versiones para evitar configuraciones obsoletas
prevent_destroy = true

# Seguridad: Bloquea ambientes sensibles (solo producción)
inputs = {
  environment = basename(get_parent_terragrunt_dir())
}

# Políticas de ejecución seguras
terraform {
  extra_arguments "prevent_destroy" {
    commands = ["destroy"]
    arguments = ["-lock=false", "-force"]
    required_var_files = [
      find_in_parent_folders("terraform.tfvars", "override.tfvars")
    ]
  }
}

# Evita aplicar cambios sin revisión previa (Ideal en CI/CD)
extra_arguments "safety" {
  commands = ["apply"]
  arguments = ["-auto-approve=false"]
}

# Logging Avanzado (Registro de ejecuciones)
extra_arguments "logging" {
  commands = ["apply", "plan"]
  env_vars = {
    TF_LOG = "INFO"
  }
}
