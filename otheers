# Configuraci贸n Global de Backend (S3 + DynamoDB para bloqueo)
remote_state {
  backend = "s3"
  config = {
    bucket         = "enterprise-terraform-state"
    key            = "${path_relative_to_include()}/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-locks"
    acl            = "bucket-owner-full-control"
    sse_algorithm  = "aws:kms"  # Encriptaci贸n con AWS KMS
  }
}

# Bloqueo de versiones para evitar destrucciones accidentales
prevent_destroy = true

# Seguridad: Bloquea ambientes sensibles (solo producci贸n)
inputs = {
  environment = basename(get_parent_terragrunt_dir())
}

#  Generar variables de ejecuci贸n seguras para Terraform
generate "terraform_cli_args" {
  path      = "cli_args.tfvars"
  if_exists = "overwrite"
  contents  = <<EOF
terraform {
  extra_arguments "prevent_destroy" {
    commands = ["destroy"]
    arguments = ["-lock=false", "-force"]
  }

  extra_arguments "safety" {
    commands = ["apply"]
    arguments = ["-auto-approve=false"]
  }

  extra_arguments "logging" {
    commands = ["apply", "plan"]
    env_vars = {
      TF_LOG = "INFO"
    }
  }
}
EOF
}
